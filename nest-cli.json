{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "entryFile": "main",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "tsconfig.json",
        "assets": [
            {
                "include": "uploads/**/*",
                "outDir": "uploads",
                "watchAssets": true
            }
        ]
    }
}
